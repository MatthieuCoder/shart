{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "lib",
		"declaration": true,
		"declarationDir": "typings",
		"moduleResolution": "node",
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"sourceMap": false
	},
	"include": [
		"src/**/*"
	]
}
